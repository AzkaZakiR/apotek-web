// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Obat{
  id    String @id
  nama_obat String? 
  gambar String?
  jenis_obat String?
  tipe_obat String?
  tanggal_expired String?
  jumlah Int?
  harga_beli Int
  harga_jual Int
  stok_obat Int?
  kategori_obat String?
  sub_kategori String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  staff Staff_gudang @relation(fields: [id_staff], references: [id])
  id_staff  String
  supplier Supplier @relation(fields: [id_supplier], references: [id])
  id_supplier String

  det_pembelian Det_pembelian[]
}
model Pembelian{
  id String @id
  jumlah_jual Int?
  total_harga Int
  tanggal_beli DateTime?
  jumlah_beli String?
  pelanggan Pelanggan @relation(fields: [id_pelanggan], references: [id])
  id_pelanggan String
  apoteker Apoteker @relation(fields: [id_apoteker], references: [id])
  id_apoteker String
  det_pembelian Det_pembelian[]
}

model Det_pembelian{
  id String @id

  pembelian Pembelian @relation(fields: [id_faktur], references: [id])
  id_faktur String
  obat Obat @relation(fields: [id_obat], references: [id])
  id_obat String
}
model Staff_gudang{
  id String @id
  nama String?
  alamat String?
  no_telp String?
  Obat Obat[]
}
model Supplier{
  id String @id
  nama String?
  alamat String?
  no_telp String?
  Obat Obat[]
}
model  Apoteker{
  id String @id
  nama String?
  alamat String?
  no_telp String?
  laporan Laporan[]
  pembelian Pembelian[] 
}
model Pelanggan{
  id String @id
  nama String?
  alamat String?
  no_telp String?
  pembelian Pembelian[]
}


model Laporan{
  id String @id
  isi_laporan String @db.LongText
  tanggal_laporan String
  apoteker Apoteker @relation(fields: [id_apoteker], references: [id])
  id_apoteker String
  pemilik Pemilik @relation(fields: [id_pemilik], references: [id])
  id_pemilik Int
}
model Pemilik{
  id Int  @id
  Nama String?
  Alamat String?
  no_telp String?
  laporan Laporan[]
}